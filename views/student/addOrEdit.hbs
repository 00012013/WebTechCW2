<h3>{{viewTitle}}</h3>

<form action="/student" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{student._id}}">
    <div class="form-row">

        <div class="form-group col-md-6">
             <label>Full Name</label>
             <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{student.fullName}}">
             <div class="text-danger">
                {{student.fullNameError}}</div>
        </div>

        <div class="form-group col-md-6">
             <label>Email</label>
             <input type="text" class="form-control" name="email" placeholder="Email" value="{{student.email}}">
             <div class="text-danger">
                {{student.EmailError}}</div>
        </div>


    </div>
     
     <div class="form-row">
         <div class="form-group  col-md-6">
            <label>Grade</label>
            <input type="number" class="form-control " name="grade" placeholder="Grade" value="{{student.grade}}">
        </div>

        <div class="form-group  col-md-6">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{student.mobile}}">
    </div>

     </div>
    
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Module</label>
            <input type="text" class="form-control" name="module" placeholder="Module name" value="{{student.module}}">
        </div>
        <div class="form-group col-md-6">
            <label>Score</label>
            <input type="number" class="form-control" name="score" placeholder="score" value="{{student.score}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Save</button>
        <a class="btn btn-danger" href="/student/list"><i class="fa fa-list-alt"></i> All Students</a>
    </div>
</form>